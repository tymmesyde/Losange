{
    "app-id": "xyz.timtimtim.Losange",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "losange",
    "finish-args": [
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--share=ipc",
        "--share=network",
        "--device=dri"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin"
    },
    "modules": [{
        "name": "service",
        "buildsystem": "simple",
        "build-options": {
            "env": {
                "CARGO_HOME": "/run/build/service/cargo"
            }
        },
        "build-commands": [
            "cargo --offline fetch --manifest-path Cargo.toml --verbose",
            "cargo --offline build --release --verbose"
        ],
        "post-install": [
            "install -Dm755 ./target/release/losange -t /app/bin/",
            "install -Dm644 ./data/icons/xyz.timtimtim.Losange.svg -t /app/share/icons/hicolor/scalable/apps/",
            "install -Dm644 ./flatpak/xyz.timtimtim.Losange.desktop -t /app/share/applications/",
            "install -Dm644 ./data/xyz.timtimtim.Losange.metainfo.xml -t /app/share/metainfo/",
            "install -Dm644 ./data/xyz.timtimtim.Losange.gschema.xml -t /app/share/glib-2.0/schemas/",
            "glib-compile-schemas /app/share/glib-2.0/schemas"
        ],
        "sources": [
            {
                "type": "dir",
                "path": "."
            },
            "flatpak/cargo-sources.json"
        ]
    }]
}